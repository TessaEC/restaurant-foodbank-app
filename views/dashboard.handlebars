<!-- Dashboard handlebars -->
<div class="card-container">
    <div class="wrapper">

        <button class="btn outline margin-btn"><a href="/dashboard/new-post">Add Post</a></button>
        <h1>Checkout your posts...</h1>

		{{#each blogPosts as |post|}}
		<div class="card-container" id="card-color">
			<div id="card-color">
			{{!-- Food provider name --}}
				<h1 id="name-color">{{post.name}}</h1>
				{{!-- Food Info--}}
				<p>{{post.content}}<br/></p>
				{{!-- contact info --}}
				<p>{{post.contact}}<br/></p>
			</div>
		</div>
		{{/each}}
    </div>
</div>

